<Window x:Class="ParabolaFlightSimulator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Параболический полет с птицами" Height="600" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Margin="10">
            <GroupBox Header="Параметры полета" Margin="0,0,0,10">
                <StackPanel>
                    <Label Content="Выберите птицу:"/>
                    <ComboBox x:Name="cmbBird" DisplayMemberPath="Name"/>

                    <Label Content="Начальная скорость (м/с):"/>
                    <TextBox x:Name="txtInitialVelocity" Text="15"/>

                    <Label Content="Угол запуска (градусы):"/>
                    <TextBox x:Name="txtLaunchAngle" Text="45"/>

                    <Label Content="Расстояние до стены (м):"/>
                    <TextBox x:Name="txtWallDistance" Text="50"/>
                </StackPanel>
            </GroupBox>

            <Button x:Name="BtnStartFlight" Content="Запустить полет" 
                    Click="BtnStartFlight_Click" Height="30" Margin="0,10,0,0"/>
        </StackPanel>

        <GroupBox Grid.Column="1" Header="Результаты" Margin="10">
            <TextBox x:Name="txtOutput" IsReadOnly="True" 
                     VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"
                     TextWrapping="Wrap" FontFamily="Consolas"/>
        </GroupBox>
    </Grid>
</Window>
